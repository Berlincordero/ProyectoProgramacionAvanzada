@model List<Product>

<table>
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>price</th>
            <th>details</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var Product in Model)
        {
            <tr>
                <td>@Product.id</td>
                <td>@Product.name</td>
                <td>@Product.price</td>
                <td>@Product.details</td>
                <td><a href="@Url.Action("Edit", new {id = Product.id})">Editar</a></td>
                <td><a href="@Url.Action("Details", new {id = Product.id})">Detalle</a></td>
                <td><a href="@Url.Action("Delete", new {id = Product.id})">Borrar</a></td>
            </tr>
        }
    </tbody>
    <a href="@Url.Action("Create")">Create</a>
</table>